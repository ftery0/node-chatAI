{
  "name": "llama-chat-server",
  "private": true,
  "version": "0.0.0",
  "main": "./dist/api/server.js",
  "type": "module",
  "types": "./dist/api/server.d.ts",
  "files": [
    "dist/",
    "package.json",
    "README.md"
  ],
  "exports": {
    ".": {
      "import": "./dist/api/server.js",
      "node": "./dist/api/server.js",
      "types": "./dist/api/server.d.ts",
      "default": "./dist/api/server.js"
    },
    "./ai": {
      "import": "./dist/ai/aiServer.js",
      "node": "./dist/ai/aiServer.js",
      "types": "./dist/ai/aiServer.d.ts",
      "default": "./dist/ai/aiServer.js"
    }
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "start": "concurrently -n api,ai -c blue,magenta \"npm run start:api\" \"npm run start:ai\"",
    "dev": "concurrently -n api,ai -c blue,magenta \"npm run dev:api\" \"npm run dev:ai\"",
    "dev:api": "vite-node ./src/api/server.ts --watch",
    "dev:ai": "vite-node ./src/ai/aiServer.ts --watch",
    "build": "npm run build:api && npm run build:ai",
    "build:api": "tsc --build tsconfig.api.json --force",
    "build:ai": "tsc --build tsconfig.ai.json --force",
    "start:api": "node ./dist/api/server.js",
    "start:ai": "node ./dist/ai/aiServer.js",
    "prebuild": "rimraf ./dist ./tsconfig.tsbuildinfo",
    "lint": "npm run lint:api && npm run lint:ai",
    "lint:api": "eslint --report-unused-disable-directives ./src/api",
    "lint:ai": "eslint --report-unused-disable-directives ./src/ai",
    "format": "npm run format:api && npm run format:ai",
    "format:api": "eslint --fix ./src/api",
    "format:ai": "eslint --fix ./src/ai",
    "clean": "rm -rf ./dist ./tsconfig.tsbuildinfo ./models"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "chalk": "^5.4.1",
    "connect-mongo": "^5.1.0",
    "express": "^4.21.2",
    "express-session": "^1.18.2",
    "mongoose": "^8.18.1",
    "node-llama-cpp": "^3.12.1",
    "uuid": "^10.0.0",
    "ws": "^8.17.1"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^4.2.0",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.2",
    "@types/node": "^22.15.17",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.10",
    "concurrently": "^9.2.1",
    "eslint": "^9.26.0",
    "eslint-import-resolver-typescript": "^4.3.4",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsdoc": "^50.6.11",
    "eslint-plugin-n": "^17.17.0",
    "rimraf": "^6.0.1",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0",
    "vite-node": "^3.1.3"
  }
}
